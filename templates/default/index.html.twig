{% extends 'base.html.twig' %}

{% block title %}POSTS{% endblock %}

{% block body %}
    {% for post in posts %}

<div class="col-sm-15 " style="margin-top: 40px">
    <h1>Заголовок :<a ><strong>{{ post.name }}</strong></a></h1>
    <h2>Текст :  {{ post.description[:50] ~ '...' }}<a href="{{ path('post_item', {'id': post.id }) }}">Читать далее</a></h2>
    <h6>Дата публикации : {{ post.createdAt| date("d.m.y   h:m:s") }}  </h6><br>
</div>
    {% endfor %}
{% endblock %}
